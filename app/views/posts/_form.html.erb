<%= form_with(model: locals[:post]) do |f| %>
  <div class="form">
    <div class="form__field">
      <%= f.label :board, class: "form__label" %>
      <%= f.select :board, @boards.map { |board| [board.name, board.id] }, include_blank: true, selected: locals[:board], class: "form__select" %>
      <% locals[:post].errors.full_messages_for(:board).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class="form__field">
      <%= f.label :title, class: "form__label" %>
      <%= f.text_field :title, class: "form__input" %>
      <% locals[:post].errors.full_messages_for(:title).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class="form__field">
      <%= f.label :body, class: "form__label" %>
      <%= f.text_area :body, class: "form__textarea" %>
      <% locals[:post].errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
      <% end %>
    </div>
    <div class="form__field">
      <%= f.submit class: "form__submit" %>
    </div>
  </div>
<% end %>
