<h2>Log in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form__field">
    <%= f.label :email, class: "form__label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form__input" %>
  </div>
  <div class="form__field">
    <%= f.label :password, class: "form__label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form__input" %>
  </div>
  <% if devise_mapping.rememberable? %>
    <div class="form__field">
      <div class="form__checkbox">
        <%= f.check_box :remember_me, class: "form__checkbox-input" %>
        <%= f.label :remember_me, class: "form__checkout-label" %>
      </div>
    </div>
  <% end %>
  <div class="form__field">
    <%= f.submit "Log in", class: "form__submit" %>
  </div>
<% end %>
<%= render "devise/shared/links" %>
