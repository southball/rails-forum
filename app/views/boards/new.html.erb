Create board
<%= form_with(model: @board) do |f| %>
  <div class="form">
    <div class="form__field">
      <%= f.label :name, class: "form__label" %>
      <%= f.text_field :name, class: "form__input" %>
      <% @board.errors.full_messages_for(:name).each do |message| %>
        <div class="form__error-message"><%= message %></div>
      <% end %>
    </div>
    <div class="form__field">
      <%= f.submit class: "form__submit" %>
    </div>
  </div>
<% end %>
